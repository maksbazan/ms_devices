<tile>
  <visual branding="nameAndLogo">
    <binding template="TileMedium">
      <text hint-maxLines="1" hint-style="title">Title</text>
      <text hint-wrap="true" hint-maxLines="3" hint-style="baseSubtle">Summary</text>
      <image src="ImageUrl" hint-removeMargin="true" placement="peek" />
    </binding>
    <binding template="TileWide">
      <text hint-maxLines="1" hint-style="title">Title</text>
      <text hint-wrap="true" hint-maxLines="3" hint-style="baseSubtle">Summary</text>
      <image src="ImageUrl" hint-removeMargin="true" placement="peek" />
    </binding>
    <binding template="TileLarge">
      <text hint-maxLines="1" hint-style="title">Title</text>
      <text hint-wrap="true" hint-maxLines="3" hint-style="baseSubtle">Summary</text>
      <image src="ImageUrl" hint-removeMargin="true" placement="peek" />
    </binding>
  </visual>
</tile>
